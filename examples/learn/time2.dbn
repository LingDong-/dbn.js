// Time 2forever{   paper 0   set msec <time 4>   set sec <time 3>   set min <time 2>   set hour <time 1>   set sec ((sec * 100)/59)   set min ((min * 100)/59)   set cury (100-((hour)*4))   pen 30   repeat x 0 100   {      line 0 (x*4) 100 (x*4)   }   field 0 100 100 cury 90   field 0 (cury-1) min (cury-4) 60   pen 100   line msec cury msec (cury-4)   pen 100   line sec cury sec (cury-4)   line (sec+1) cury (sec+1) (cury-4)   field 0 0 100 3 50}