// Gray Machine -- Tom White// initial left (horz) colorset h 0// initial right (vert) colorset v 0// set initial left and right timeset last ((<time 1>*100*60*60) + (<time 2>*100*60) + (<time 3>*100) +(<time 4>))set lastL lastset lastR last// set the pace of changeset incL 8set incR 4forever{   // save mouse coords   set x <mouse 1>   set y <mouse 2>   // change energy threshold   set L (x*x/10)   set R (y*y/10)   set cur ((<time 1>*100*60*60) + (<time 2>*100*60) + (<time 3>*100) +(<time 4>))   // change left color - maybe   set dur (100*(cur-lastL))   smaller? L dur   {      set L 0      set lastL cur      set h (h+incL)      smaller? h 0      {         set incL (-incL)         set h (h+incL+incL)      }      smaller? 100 h      {         set incL (-incL)         set h (h+incL+incL)      }   }   // change right color - maybe   set dur (100*(cur-lastR))   smaller? R dur   {      set R 0      set lastR cur      set v (v+incR)      smaller? v 0      {         set incR (-incR)         set v (v+incR+incR)      }      smaller? 100 v      {         set incR (-incR)         set v (v+incR+incR)      }   }   // draw left   set c h   set inc 5   repeat n 0 10   {      set base (n * x / 10)      set top ((n+1) * x / 10)      field base 0 top y c      set c (c+inc)      smaller? c 0      {         set inc (-inc)         set c (c+inc+inc)      }      smaller? 100 c      {         set inc (-inc)         set c (c+inc+inc)      }   }   repeat n 10 0   {      set base (n * x / 10)      set top ((n+1) * x / 10)      field base y top 100 c      set c (c+inc)      smaller? c 0      {         set inc (-inc)         set c (c+inc+inc)      }      smaller? 100 c      {         set inc (-inc)         set c (c+inc+inc)      }   }   // draw right   set c v   set inc 5   repeat n 0 9   {      set base (n * y / 9)      set top ((n+1) * y / 9)      field x base 100 top c      set c (c+inc)      set c (c - ((c/101) * 101))   }   repeat n 9 0   {      set base (y + n * (100-y) / 9)      set top (y + (n+1) * (100-y) / 9)      field x base 100 top c      set c (c+inc)      set c (c - ((c/101) * 101))   }}//saved