// Nervous little guy -- Tom White// this is my loniest singleton// he seems autonomous// nervous little guy// seed random variablesset seed (<time 3>+<time 4>)set val 0// make a new random 0..100command newRandom{   // make a new random top   set seed ( (seed+3) * 541 )   // shift seed if it went negative   smaller? seed 0   {      set seed (seed+2147483647)   }   set val ( seed - ((seed/101) * 101) )}// positionx, yset px 40set py 40// feeler lengthrepeat n 1 8{   set <array n> 5}// map 0..100 to 1..8repeat n 0 100{   set <array (n+100)> (1 + n/13)}// map index+300 to x or yset <array 301> 1set <array 302> 0set <array 303> 0set <array 304> 1set <array 305> 1set <array 306> 0set <array 307> 0set <array 308> 1command drawScreen{   // clear and draw junk   pen 100   paper 0   field 70 20 75 25 60   field 10 60 15 65 60   field 45 40 50 45 60   field 60 65 65 70 60   field 90 85 95 90 60   field 10 80 15 85 60   field 13 10 18 15 60   field 87 44 92 49 60   // draw cell and nucelus   field (px-4) (py-4) (px+4) (py+4) 80   field (px-1) (py-1) px py 10   // draw feelers   pen 80   line (px-4-<array 7>) (py+4) (px+4+<array 2>) (py+4)   line (px-4-<array 6>) (py-4) (px+4+<array 3>) (py-4)   line (px+4) (py-<array 4>-4) (px+4) (py+<array 1>+4)   line (px-4) (py-<array 5>-4) (px-4) (py+<array 8>+4)}command wander{   newRandom   smaller? val 20   {      newRandom      smaller? val 8      {         // small random jump 15 units         set side (val+1)         set <array side> (<array side>+15)      }   }   repeat n 1 8   {      set dir 0      smaller? n 4      {         set dir 1      }      same? 8 n      {         set dir 1      }      smaller? 4 <array n>      {         same? <array (n+300)> 0         {            // xdir            same? dir 0            {               set px (px - 1)            }            same? dir 1            {               set px (px + 1)            }         }         same? <array (n+300)> 1         // ydir         {            same? dir 0            {               set py (py - 1)            }            same? dir 1            {               set py (py + 1)            }         }         set <array n> (<array n>-1)      }   }   // check 4 borders, small jump back   smaller? 90 px   {      set <array 6> (5)   }   smaller? 90 py   {      set <array 4> (5)   }   smaller? py 10   {      set <array 1> (5)   }   smaller? px 10   {      set <array 2> (5)   }}forever{   wander   drawScreen}