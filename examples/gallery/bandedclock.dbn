// Banded Clock -- Golan Levin// three striped bands// or three banded stripes// seconds, minutes, hours// count the bands...number mod x y{   value (x-(y*(x/y)))}number wave a{   set b 50   smaller? a 50   {      set b (100-(a*2))   }   notsmaller? a 50   {      set b (100-((100-a)*2))   }   value b}paper 0set topH  33set baseM 34set topM  66set baseS 67set H 99set M 99set S 99forever{   set pH H   set pM M   set H <mod <time 1> 12>   set M <time 2>   set S <time 3>   set C <time 4>   set cents ((S*100) + C)   repeat A 0 100   {      // pen < wave (<mod (A*cents) 10000> /100) >      // instead, an inlined version of <wave t>      set x (A*cents)      set t ((x-(10000*(x/10000)))/100)      smaller? t 50      {         pen (100-(t*2))      }      notsmaller? t 50      {         pen (100-((100-t)*2))      }      line A baseS A 100   }   refresh   notsame? H pH   {      repeat A 0 100      {         pen < wave <mod (A*H) 100>>         line A 0 A topH      }   }   notsame? M pM   {      repeat A 0 100      {         pen < wave <mod (A*M) 100>>         line A baseM A topM      }   }}