// Heads or tails -- Casey Reas// click and the organism will follow.paper 90pen 20load dbngraphics.dbnset fy 50set fx 50set mx 70set my 70set timeout 0
set mxo 0
set myo 0forever{   paper 90   same? <mouse 3> 100   {      notsame? timeout <time 3> //you can only deposit one dot a second      {         set timeout <time 3>         set mxo mx   //save previous x click         set myo my   //save previous y click         set mx <mouse 1>   //save new x click         set my <mouse 2>   //save new y click      }   }   notsame? fx mx   {      set fx (((fx*100)-(((fx*100)-(mx*100))/4))/100)   }   notsame? fy my   {      set fy (((fy*100)-(((fy*100)-(my*100))/4))/100)   }   smaller? (fx-mx) 5   {      notsame? mxo fx      {         set mxo (((mxo*100)-(((mxo*100)-(fx*100))/8))/100)      }   }   smaller? (fy-my) 5   {      notsame? myo fy      {         set myo (((myo*100)-(((myo*100)-(fy*100))/8))/100)      }   }   field (fx-3) (fy-3) (fx+3) (fy+3) 20   field (mxo-3) (myo-3) (mxo+3) (myo+3) 20   circle fx fy (15+(<time 4>/30)) 20   circle mxo myo (18+(<time 4>/30)) 40   line fx fy mxo myo}