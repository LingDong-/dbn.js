// Paramecium tuftball -- Ben Fry// random from the dbn bookset rseed 98set bb 198621set mm 98621number random{ set bl (rseed*bb+1) set rseed (bl % mm) value (rseed % 100)}set x 40set y 100set pmx <mouse 1>set pmy <mouse 2>set count 0norefreshforever{ set dx (<random> % 4) //+ mdx) set dy (<random> % 4) //+ mdy) set x (x + dx) set y (y + dy) smaller? x 0 ; { ; set x 100 ; } smaller? 100 x ; { ; set x 0 ; } smaller? y 0 ; { ; set y 100 ; } smaller? 100 y ; { ; set y 0 ; } same? (count % 30) 0 {  paper 0 } smaller? x 50 {  smaller? y 50   {   set [(x-1) (y+1)] 60   set [x y] 80   set [(x+1) y] 40  }  notsmaller? y 50  {   set [(x-1) (y+1)] 60   set [(x-1) y] 80   set [x (y-1)] 40  } } notsmaller? x 50 {  smaller? y 50  {   set [(x-1) (y-1)] 60   set [x y] 80   set [x (y+1)] 40  }  notsmaller? y 50  {   set [(x+1) y] 60   set [x y] 80   set [(x-1) (y-1)] 40  } } refresh set count (count+1)}