// Dancing Y -- (c)1999, Jared Schiffman// click and move mouse to record your movements// then release and watchnumber mytime{   value (<time 2>*6000 + <time 3>*100 + <time 4>)}// wait until first mouse clickpaper 10repeat d 0 2{   same? <mouse 3> 0   {      set d 0   }}paper 20pen 100// record 1.5 seconds of mouse strokeset i 1set T <mytime>set MAX 150  //centi-secondsrepeat d 0 2{   notsame? <mytime> T   {      set <array (i*2)> <mouse 1>      set <array (i*2+1)> <mouse 2>      set [<mouse 1> <mouse 2>] 100      set i (i+1)      set T <mytime>   }   set d 0   same? i MAX   {      set d 2   }}// run the rhythmpaper 100pen 10norefreshset p 50set X1 <array 2>set Y1 <array 3>forever{   set T <mytime>   set i 1   repeat d 0 2   {      notsame? <mytime> T      {         set X1 ((<array (i*2)> + X1)/2)         set Y1 ((<array (i*2+1)> + Y1)/2)         set p ((X1-Y1)/10)         set px (50+p)         smaller? p 0         {            set p (-1*p)         }         set py (30-p/2)         paper 100         antialias 0   // don't antialias inner lines         line px py (px+X1/2) (py+X1/4)         line px (py+1) (px+X1/2) (py+X1/4)         line px (py-1) (px+X1/2) (py+X1/4)         line px py (px-Y1/2) (py+Y1/4)         line px (py+1) (px-Y1/2) (py+Y1/4)         line px (py-1) (px-Y1/2) (py+Y1/4)         line 50 10 px py         line 50 10 (px+1) py         line 50 10 (px-1) py         antialias 100   // antialias only outer lines         line px (py+2) (px+X1/2) (py+X1/4)         line px (py-2) (px+X1/2) (py+X1/4)         line px (py+2) (px-Y1/2) (py+Y1/4)         line px (py-2) (px-Y1/2) (py+Y1/4)         line 50 10 (px+2) py         line 50 10 (px-2) py         set i (i+1)         set T <mytime>         refresh      }      set d 0      same? i (MAX-2)      {         set d 2      }   }}